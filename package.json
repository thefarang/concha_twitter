{
  "name": "concha_twitter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "reload": "node ./src/scripts/reload.js",
    "lint": "./node_modules/.bin/standard --verbose \"src/**/*.js\"",
    "fix-lint": "./node_modules/.bin/standard --fix \"src/**/*.js\"",
    "debug": "./node_modules/.bin/nodemon ./src/bin/startup.js",
    "test": "./node_modules/.bin/mocha \"src/test/lib/*.js\" \"src/test/routes/*.js\"",
    "cover": "./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha -- \"src/test/lib/*.js\" \"src/test/routes/*.js\"",
    "coveralls": "npm run cover -- --report lcovonly && cat ./coverage/lcov.info | ./node_modules/.bin/coveralls"
  },
  "dependencies": {
    "body-parser": "1.18.3",
    "express": "4.16.4",
    "mongoose": "5.3.9",
    "amqplib": "0.5.2",
    "config": "2.0.1",
    "bunyan": "1.8.12"
  },
  "devDependencies": {
    "nodemon": "1.18.5",
    "standard": "12.0.1",
    "mocha": "5.2.0",
    "chai": "4.2.0",
    "chai-http": "4.2.0",
    "istanbul": "v1.1.0-alpha.1",
    "coveralls": "3.0.2",
    "mocha-lcov-reporter": "1.3.0"
  },
  "standard": {
    "globals": [
      "describe",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it"
    ]
  }
}
